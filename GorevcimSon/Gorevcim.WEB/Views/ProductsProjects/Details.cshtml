@{
    ViewData["Title"] = "Details";
}
@model ProductProjectsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductsProjects" asp-action="Details" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Proje Detay</h4>
                <input type="hidden" asp-for="ProductProjectId" id="ProductColorIdDetails">




                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductProjectNameSave">Proje Adı</label>
                    <div class="col-md-6">
                        <input id="ProductColorNameDetails" asp-for="Name" type="text" class="form-control" disabled>

                    </div>
                </div>



                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductProjectCodeDetails" asp-for="ShortCode" type="text" class="form-control" disabled>

                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <input id="ProductsBrandsExplanationUpdate" asp-for="Explanation" type="text" class="form-control" disabled readonly>

                    </div>
                </div>










            </form>


        </div>
    </div>
</div>

