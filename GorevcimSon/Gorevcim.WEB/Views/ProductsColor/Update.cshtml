@{
    ViewData["Title"] = "Update";
}
@model ProductColorsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductsColor" asp-action="Update" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Renk Güncelle</h4>
                <input type="hidden" asp-for= "Id" id="ProductColorIdUpdate">

        
                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductColorNameSave">Adı</label>
                    <div class="col-md-6">
                        <input id="ProductColorNameUpdate" asp-for="Name" type="text" class="form-control" placeholder="Renk Adını Yazınız" required>
                        <div class="invalid-feedback">Renk Adı Boş olamaz!</div>
                    </div>
                </div>

               <div class="mb-3 row">
                    <label asp-for="Code" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductColorCodeUpdate" asp-for="Code" type="text" class="form-control" placeholder="Renk Kodunu Yazınız" required>
                        <div class="invalid-feedback">Renk Kodu Boş olamaz!</div>
                    </div>
                </div>


                <input type="submit" value="Güncelle" class="btn btn-primary waves-effect waves-light me-1 form-group" />

            </form>


        </div>
    </div>
</div>

