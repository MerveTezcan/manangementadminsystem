@{
    ViewData["Title"] = "Details";
}
@model ProductBrandsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductsBrands" asp-action="Details" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Marka Detay</h4>
                <input type="hidden" asp-for="Id" id="ProductsBrandsIdDetails">

                <div class="mb-3 row">
                    <label asp-for="BrandsName" class="col-md-2 col-form-label">Adı</label>
                    <div class="col-md-6">
                        <input id="ProductBrandsNameDetails" asp-for="BrandsName" type="text" class="form-control" disabled>

                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductBrandsNameDetails" asp-for="ShortCode" type="text" class="form-control" disabled>

                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="BrandsWebUrl" class="col-md-2 col-form-label">Web Adresi</label>
                    <div class="col-md-6">
                        <input id="ProductBrandsWebUrlDetails" asp-for="BrandsWebUrl" type="text" class="form-control" disabled>

                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <input id="ProductBrandsExplanationDetails" asp-for="Explanation" type="text" class="form-control" disabled readonly>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>

