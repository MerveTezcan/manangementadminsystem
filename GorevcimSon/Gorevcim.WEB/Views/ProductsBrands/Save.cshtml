@{
    ViewData["Title"] = "Save";
}
@model ProductBrandsDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="Save" method="post" asp-controller="ProductsBrands" class="needs-validation" novalidate>
                <h4 class="card-title">Marka Kayıt</h4>



                <div class="mb-3 row">
                    <label asp-for="BrandsName" class="col-md-2 col-form-label" for="ProductProjectBrandsNameSave">Adı</label>
                    <div class="col-md-6">
                        <input asp-for="BrandsName" type="text" class="form-control" id="ProductProjectNameSave" placeholder="Marka Adını Yazınız" required>
                        <div class="invalid-feedback"> Marka Adı Boş olamaz!</div>
                    </div>
                </div>


                

                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label" for="ProductProjectBrandsNameSave">Kodu</label>
                    <div class="col-md-6">
                        <input asp-for="ShortCode" type="text" class="form-control" id="ProductProjectNameSave" placeholder="Marka Kodunu Yazınız" required>
                        <div class="invalid-feedback"> Marka Kodu Boş olamaz!</div>
                    </div>
                </div>


                <div class="mb-3 row">
                    <label asp-for="BrandsWebUrl" class="col-md-2 col-form-label">Marka Web Url</label>
                    <div class="col-md-6">
                        <input asp-for="BrandsWebUrl" id="BrandsWebUrlSave" class="form-control" type="text" placeholder="Marka Web Url Yazınız" required>
                        <div class="invalid-feedback">Marka Web Url Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <input id="ProductProjectsExplanationSave" asp-for="Explanation" type="text" class="form-control" placeholder="Açıklama" required>
                        <div class="invalid-feedback">Projenin Açıklaması Boş olamaz!</div>
                    </div>
                </div>


                <input type="submit" class="btn btn-primary waves-effect waves-light me-1 form-group" />




            </form>


        </div>
    </div>
</div>


